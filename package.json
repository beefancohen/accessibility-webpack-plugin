{
  "name": "accessibility-webpack-plugin",
  "version": "0.2.0",
  "description": "Webpack plugin that reports accessibility issues for React applications",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "babel src --out-dir lib --copy-files --source-maps inline",
    "build:watch": "npm run build -- --watch",
    "lint": "eslint index.js src __tests__",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf tmp/*.js && rimraf lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evcohen/accessibility-webpack-plugin.git"
  },
  "keywords": [
    "webpack",
    "plugin",
    "accessibility",
    "a11y",
    "react",
    "javascript"
  ],
  "author": "Ethan Cohen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evcohen/accessibility-webpack-plugin/issues"
  },
  "homepage": "https://github.com/evcohen/accessibility-webpack-plugin#readme",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "chalk": "^1.1.3",
    "fs": "^0.0.1-security",
    "rimraf": "^2.6.1",
    "tmp": "^0.0.31"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^19.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^19.0.2"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "reports",
    "roots": [
      "<rootDir>/__tests__"
    ]
  }
}
